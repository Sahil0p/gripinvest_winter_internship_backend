          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\\n  \\\"email\\\": \\\"demo@invest.local\\\",\\n  \\\"password\\\": \\\"Demo@123\\\"\\n}"
        },
        "url": "{{base_url}}/auth/login"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "user_token",
      "value": ""
